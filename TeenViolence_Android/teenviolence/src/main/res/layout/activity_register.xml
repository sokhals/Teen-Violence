<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#121212"
    tools:context="project.msd.teenviolence.Register"
    >
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- Here you put the rest of your current view-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="false"
        >


        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:singleLine="true"
            android:hint="enter your username"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#DDAAAAAA"
            android:paddingBottom="10dp"
            android:id="@+id/username"
            android:layout_weight="1"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:focusable="false"
        >


        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:singleLine="true"
            android:hint="enter your password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#DDAAAAAA"
            android:paddingBottom="10dp"
            android:id="@+id/password"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >


        <Spinner
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/spinner_style"
            android:textSize="18dp"
            android:layout_weight="1">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
         <Spinner
             android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/gender"
            android:entries="@array/gender_array"
            android:textSize="18dp"
             style="@style/spinner_style"
            android:layout_weight="1">
        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <Spinner
            android:id="@+id/ethnicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/gender"
            android:entries="@array/ethnicity_array"
            android:textSize="18dp"
            style="@style/spinner_style"
            android:layout_weight="1">
        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <Spinner
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/gender"
            android:entries="@array/education"
            android:textSize="18dp"
            style="@style/spinner_style"
            android:layout_weight="1">
        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <Spinner
            android:id="@+id/mobile_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/gender"
            android:entries="@array/mobile_experience"
            android:textSize="18dp"
            style="@style/spinner_style"
            android:layout_weight="1">
        </Spinner>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:singleLine="true"
            android:id="@+id/psycoMed"
            android:hint="psycotherapeutic medications"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="#DDAAAAAA"
            android:paddingBottom="10dp"
            android:layout_weight="1"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Blindness"
            android:layout_weight="0.35"

            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:textColor="#DDAAAAAA"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/colorblindness"
            android:theme="@android:style/Theme.Holo"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:textColor="@android:color/black"
            android:layout_weight="0.65"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disability Status"
            android:layout_weight="0.35"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:textColor="#DDAAAAAA"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:id="@+id/disability"
            android:layout_height="wrap_content"
            android:theme="@android:style/Theme.Holo"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:textColor="@android:color/black"
            android:layout_weight="0.65"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/register"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:text="register"
            android:layout_weight="0.2"
            android:textAllCaps="false"

            android:textAlignment="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:id="@+id/Cancel"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:text="cancel"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.2"
            android:textAllCaps="false"

            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
